{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb", "prettier"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "babelOptions": {
            "root": "."
        },
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "prefer-promise-reject-errors": ["off"],
        "no-return-assign": ["off"],
        "no-unused-expressions": ["error", { "allowTernary": true }],
        "no-param-reassign": ["off"],
        "prefer-const": ["off"],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100,
                "tabWidth": 4
            }
        ]
    }
}
